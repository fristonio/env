# ghostty +list-keybinds --default

# List available themes: ghostty +list-themes
theme = Catppuccin Frappe

macos-option-as-alt = left
window-decoration = false

# Enable shell integration
shell-integration = bash

# brew install --cask font-jetbrains-mono
font-family = "JetBrains Mono ExtraBold"
font-feature = "-liga"
font-thicken = true

font-size = 11

quick-terminal-position = right
quick-terminal-animation-duration = 0

# Reload config
keybind = alt+a>r=reload_config

# KeyBindings
keybind = alt+t=toggle_quick_terminal

# Terminal split
keybind = alt+a>v=new_split:right
keybind = alt+a>s=new_split:down

## Moving around splits
keybind = alt+a>h=goto_split:left
keybind = alt+a>j=goto_split:down
keybind = alt+a>k=goto_split:up
keybind = alt+a>l=goto_split:right

## Optionally configure moving around splits with super as we
## don't use it anyways.
keybind = super+h=goto_split:left
keybind = super+j=goto_split:down
keybind = super+k=goto_split:up
keybind = super+l=goto_split:right

keybind = alt+a>z=toggle_split_zoom

## Resizing splits
keybind = alt+a>shift+h=resize_split:left,100
keybind = alt+a>shift+j=resize_split:down,100
keybind = alt+a>shift+k=resize_split:up,100
keybind = alt+a>shift+l=resize_split:right,100

keybind = super+shift+r=equalize_splits

## Moving around tabs
keybind = alt+a>a=last_tab
keybind = alt+a>n=next_tab
keybind = super+n=next_tab
keybind = alt+a>p=previous_tab

keybind = super+p=previous_tab
keybind = super+t=new_tab

keybind = alt+a>x=close_surface

keybind = super+shift+f=write_screen_file:paste
keybind = super+shift+o=write_screen_file:open

### Generic terminal binds

# Ctrl+a Move cursor to start of line
# Ctrl+e Move cursor to end of line
# Ctrl+b Move back one character
# Alt+b Move back one word
# Ctrl+f Move forward one character
# Alt+f Move forward one word
# Ctrl+d Delete current character
# Ctrl+w Cut the last word
# Ctrl+k Cut everything after the cursor
# Alt+d Cut word after the cursor
# Alt+w Cut word before the cursor
# Ctrl+y Paste the last deleted command
# Ctrl+n Next command from the History
# Ctrl+p previous command from the History
